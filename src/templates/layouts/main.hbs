<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    {{infos.name}}
    {{#if (eq title "Index")}}
    {{else}}
    | {{title}}
    {{/if}}
  </title>

  <meta name="description"
    content="GENIUS TSM, association étudiante de Toulouse School of Management, organise mentorat, événements et programmes pour les entrepreneurs de demain.">
  <meta name="keywords"
    content="Genius TSM, association étudiante, Toulouse School of Management, mentorat, événements étudiants, projets étudiants, entrepreneuriat">
  <meta name="robots" content="index, follow">
  <link rel="icon" type="image/png" href="images/{{infos.logo}}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Poppins:wght@600;700&display=swap"
    rel="stylesheet">
  <style>
    :root {
      --primary-color: #FE0000;
      --primary-hover: #E00000;
      --primary-light: #FF6F61;
      --secondary-color: #F5F5F5;
      --secondary-dark: #E0E0E0;
      --background-color: rgba(255, 255, 255, 0.8);
      --border-color: rgba(255, 255, 255, 0.3);
      --accent-color: #1D1D1B;
      --accent-light: #333333;
      --text-primary: #1D1D1B;
      --text-secondary: #555555;
      --text-light: #FFFFFF;
      --gradient-hero: linear-gradient(135deg, rgba(254, 0, 0, 0.1) 0%, rgba(255, 111, 97, 0.1) 100%);
      --gradient-subtle: linear-gradient(135deg, #F5F5F5 0%, #E0E0E0 100%);
      --success-color: #4CAF50;
      --warning-color: #FF9800;
      --error-color: #F44336;
      --info-color: #2196F3;
      --shadow-color: rgba(0, 0, 0, 0.1);
    }

    /* Scrollbar pour Chrome, Edge, Safari */
    ::-webkit-scrollbar {
      width: 12px;
      /* largeur de la scrollbar */
      background-color: var(--secondary-color);
      /* couleur de fond du track */
    }

    ::-webkit-scrollbar-track {
      background-color: var(--secondary-color);
      /* track de la scrollbar */
      border-radius: 6px;
    }

    ::-webkit-scrollbar-thumb {
      background-color: var(--primary-light);
      /* couleur du curseur */
      border-radius: 6px;
      border: 3px solid var(--secondary-color);
      /* espace autour du thumb */
    }

    ::-webkit-scrollbar-thumb:hover {
      background-color: var(--primary-hover);
      /* couleur au survol */
    }

    ::-webkit-scrollbar-corner {
      background-color: var(--secondary-color);
      /* coins de la scrollbar si scroll horizontal + vertical */
    }

    /* Firefox */
    * {
      scrollbar-width: thin;
      scrollbar-color: var(--primary-light) var(--secondary-color);
    }

    /* Particles Background */
    #particles-js {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      opacity: 0.3;
    }

    /* Reset et base */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Roboto', sans-serif;
      background-color: var(--secondary-color);
      color: var(--text-primary);
      line-height: 1.6;
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    /* Typographie */
    h1,
    h2,
    h3,
    h4 {
      font-family: 'Poppins', sans-serif;
      font-weight: 700;
      color: var(--text-primary);
    }

    h1 {
      font-size: 3rem;
      color: var(--primary-color);
      text-shadow: 0 2px 10px rgba(254, 0, 0, 0.2);
      text-align: center;
      margin-bottom: 30px;
    }

    h2 {
      font-size: 2.5rem;
      color: var(--primary-color);
      text-align: center;
      margin-bottom: 35px;
      position: relative;
    }

    .line::after {
      content: '';
      display: block;
      width: 60px;
      height: 4px;
      background: var(--primary-color);
      margin: 15px auto 0;
      border-radius: 2px;
      box-shadow: 0 0 10px var(--primary-light);
    }

    h3 {
      font-size: 2rem;
      color: var(--primary-color);
      text-align: center;
      margin-bottom: 25px;
      position: relative;
    }

    p {
      font-size: 1.1rem;
      text-align: center;
      color: var(--text-secondary);
      max-width: 900px;
      margin: 0 auto 20px;
      background-color: var(--background-color);
      padding: 20px;
      border-radius: 15px;
      backdrop-filter: blur(5px);
      box-shadow: 0 4px 15px var(--shadow-color);
    }

    /* Mise en page */
    main {
      width: 90%;
      margin: 80px auto 0;
      /* Marge haute pour éviter la navbar */
      margin-top: 100px;
    }

    section {
      padding: 60px 20px;
      margin: auto;
      position: relative;
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

    section.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Grilles et cartes */
    .grid,
    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      margin-top: 50px;
      perspective: 1000px;
    }

    .card {
      background: var(--background-color);
      border-radius: 20px;
      padding: 35px 25px;
      text-align: center;
      box-shadow: 0 10px 30px var(--shadow-color);
      transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
      backdrop-filter: blur(8px);
      border: 1px solid var(--border-color);
      transform-style: preserve-3d;
    }

    .card:hover {
      transform: translateY(-20px) scale(1.05) rotateX(5deg);
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
      background: rgba(255, 229, 229, 0.9);
    }

    .card h3 {
      color: var(--primary-color);
      margin-bottom: 15px;
      font-size: 1.6rem;
    }

    .card p {
      color: var(--text-secondary);
      line-height: 1.6;
    }

    .card img {
      width: 100%;
      /* occupe toute la largeur de la carte */
      height: 400px;
      /* fixe la hauteur (ajuste selon ton besoin) */
      object-fit: cover;
      /* découpe l'image pour remplir l'espace sans la déformer */
      border-radius: 15px;
      margin-bottom: 20px;
    }

    /* Ligne des réseaux sociaux dans les cartes */
    .card .socials {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 20px;
      margin-bottom: 20px;
    }

    .card .socials a {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background-color: var(--background-color);
      border-radius: 50%;
      color: var(--primary-color);
      text-decoration: none;
      font-size: 1.2rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px var(--shadow-color);
    }

    .card .socials a:hover {
      background-color: var(--primary-color);
      color: var(--text-light);
      transform: translateY(-5px) scale(1.1);
      box-shadow: 0 8px 20px rgba(254, 0, 0, 0.3);
    }

    /* Badges */
    .badges {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 40px;
    }

    .badge {
      background: var(--background-color);
      border: 2px solid var(--primary-color);
      color: var(--primary-color);
      padding: 12px 25px;
      border-radius: 50px;
      font-weight: bold;
      transition: all 0.4s ease;
      box-shadow: 0 4px 15px var(--shadow-color);
      backdrop-filter: blur(5px);
      transform-style: preserve-3d;
    }

    .badge:hover {
      background: var(--primary-color);
      color: var(--text-light);
      transform: translateY(-8px) scale(1.1);
      box-shadow: 0 10px 25px rgba(254, 0, 0, 0.3);
    }

    /* Boutons */
    button {
      background: var(--primary-color);
      color: var(--text-light);
      border: none;
      padding: 15px 45px;
      font-size: 1.2rem;
      font-weight: bold;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.4s ease;
      box-shadow: 0 6px 20px rgba(254, 0, 0, 0.3);
      transform-style: preserve-3d;
      display: block;
      margin: 30px auto 10px auto;
    }

    button:hover {
      background: var(--primary-hover);
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 10px 25px rgba(254, 0, 0, 0.4);
    }

    /* Formulaires */
    form input,
    form textarea {
      width: 100%;
      padding: 15px;
      margin: 10px 0 20px 0;
      border-radius: 10px;
      border: 1px solid var(--border-color);
      background-color: var(--text-light);
      color: var(--accent-color);
      font-family: inherit;
    }

    /* Animations */
    @keyframes float {
      0% {
        transform: translateY(0px);
      }

      50% {
        transform: translateY(-15px);
      }

      100% {
        transform: translateY(0px);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in {
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.8s ease-out;
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }

      h2 {
        font-size: 2rem;
      }

      p {
        font-size: 1rem;
      }

      .hero h1 {
        font-size: 2.5rem;
      }

      .hero p {
        font-size: 1.1rem;
      }

      .card {
        padding: 25px 15px;
      }

      section {
        padding: 40px 15px;
      }

      button {
        padding: 12px 30px;
      }
    }
  </style>
</head>

<body>
  {{> header}}
  <main>
    <div id="particles-js"></div>
    {{{body}}}
  </main>
  {{> footer}}
  <script>
    // Animation au scroll pour toutes les sections
    const sections = document.querySelectorAll('section');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1 });

    sections.forEach(section => observer.observe(section));

    // Animation fade-in
    const faders = document.querySelectorAll('.fade-in');
    const appearOptions = { threshold: 0.2, rootMargin: "0px 0px -50px 0px" };
    const appearOnScroll = new IntersectionObserver(function (entries, observer) {
      entries.forEach(entry => {
        if (!entry.isIntersecting) return;
        entry.target.classList.add('visible');
        observer.unobserve(entry.target);
      });
    }, appearOptions);

    faders.forEach(fader => appearOnScroll.observe(fader));
  </script>

  <!-- Particles.js -->
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
  <script>
    particlesJS("particles-js", {
      particles: {
        number: { value: 1000, density: { enable: true, value_area: 800 } },
        color: { value: "#E53935" },
        shape: { type: "circle" },
        opacity: { value: 0.8, random: true, anim: { enable: true, speed: 1, opacity_min: 0.1 } },
        size: { value: 2, random: true },
        line_linked: { enable: false },
        move: { enable: true, speed: 0.5, direction: "none", random: true, out_mode: "out" }
      },
      interactivity: { detect_on: "canvas", events: { onhover: { enable: false }, onclick: { enable: false } } },
      retina_detect: true
    });
  </script>
</body>

</html>